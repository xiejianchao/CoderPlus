<resources>>

    <style name="AppMaterialBaseTheme.Default" parent="AppMaterialBaseTheme">
        <item name="android:navigationBarColor">@color/color_navigation</item>
    </style>

    <!-- Activity不能滑动返回时设置的主题-->
    <style name="AppMaterialBaseTheme.NoTransLucent" parent="AppMaterialBaseTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:navigationBarColor">@color/color_navigation</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>


    <style name="CardViewStyle" parent="CardView.Light">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

</resources>
